#!/bin/bash

verbose=false

function usage() {
    echo "Usage: $(basename $0) [options] [<projects>]"
    echo ""
    echo "Runs 'git diff' in all/specified projects."
    echo ""
    echo "Options:"
    echo "-h,--help"
    echo "-v,--verbose"
    exit $1
}

opts=$(getopt --options "hv" --longoptions "help,verbose" --name "$(basename $0)" -- "$@") || usage 1
eval set -- "$opts"

set -e

while true; do
    case "$1" in
        -h|--help)
            usage 0
            ;;
        -v|--verbose)
            verbose=true
            shift
            ;;
        --)
            shift
            break
            ;;
    esac
done

if [ $verbose = true ] || [ $# -gt 0 ]; then
    repo forall "$@" -c 'd=$(git diff); [ -n "$d" ] && printf "\033[0;31m%s\033[0m\n" "$REPO_PROJECT" && git diff || printf "\033[0;32m%s\033[0m\n" "$REPO_PROJECT"'
else
    repo forall -c 'd=$(git diff); [ -n "$d" ] && printf "\033[0;31m%s\033[0m\n" "$REPO_PROJECT" && git diff'
fi
