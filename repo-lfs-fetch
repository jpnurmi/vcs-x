#!/bin/bash

set -e

verbose=false

function usage() {
    echo "Usage: $(basename $0) [projects]"
    echo ""
    echo "Runs 'git lfs fetch' in all/specified projects."
    echo ""
    echo "Options:"
    echo "-h,--help"
    echo "-v,--verbose"
    exit $1
}

opts=()
for opt in "$@"; do
    case "$opt" in
        -h|--help)
            usage
            ;;
        -v|--verbose)
            verbose=true
            shift
            ;;
        *)
            opts+=("$opt")
            ;;
    esac
done

if [ $verbose = true ]; then
    repo forall ${opts[@]} -c 'echo "\r\033[KLFS fetch: $(($REPO_I*100/$REPO_COUNT))% ($REPO_I/$REPO_COUNT) $REPO_PROJECT" && git lfs fetch'
else
    repo forall ${opts[@]} -c 'echo -n "\r\033[KLFS fetch: $(($REPO_I*100/$REPO_COUNT))% ($REPO_I/$REPO_COUNT) $REPO_PROJECT" && git lfs fetch > /dev/null' && echo
fi
